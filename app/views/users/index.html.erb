<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Password</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>City1</th>
    <th>City2</th>
    <th>City3</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.firstName %></td>
    <td><%= user.lastName %></td>
    <td><%= user.email %></td>
    <td><%= user.city1 %></td>
    <td><%= user.city2 %></td>
    <td><%= user.city3 %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

